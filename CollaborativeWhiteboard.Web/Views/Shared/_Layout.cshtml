<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Whiteboard</title>
    <link rel="stylesheet" href="~/css/whiteboard.css" />
    <!-- Add other head elements such as favicon here -->
</head>
<body>
    <header>
        <!-- Simple navigation -->
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "Home")">WhiteboardHome</a></li>
                <li><a href="@Url.Action("Index", "Whiteboard")">Whiteboard</a></li>
                <!-- Add other navigation links if needed -->
            </ul>
        </nav>
    </header>

    <main>
        @RenderBody() <!-- This is where your specific view will be rendered -->
    </main>

    <footer>
        <p>&copy; @DateTime.Now.Year - Whiteboard Collaboration Tool</p>
    </footer>

    @RenderSection("Scripts", required: false)
    <script src="~/js/whiteboard.js"></script>
</body>
</html>